.recipe-page-content
  position: relative

.recipe-page
  padding: 0 0 1rem 0
  background-color: #fff
  color: graypurple

  h3
    text-align: center
    margin: 0 0 0.3em
  
  h4
    text-align: center
    margin: 0
    font-weight: 500

  .instructions
    font-size: 15px
    font-size: 4.7vw

  .ingredient
    display: flex
    align-items: center
    padding: 0.5rem 0.4rem
    border-bottom: solid 1px lighten(graypurple, 80%)

    &__img
      flex: 1 0 20px

      img
        width: 100%

    &__name
      flex: 7 0 0
      padding-left: 10px
      font-size: 4.5vw
      font-weight: 600

    &__amount
      flex: 7 0 0
      text-align: right
      font-size: 5vw

  .step
    padding: 0.8rem 0
    
    &__ingredients
      display: block
      margin-bottom: 0.3em
      font-weight: 600
      font-size: 15px
      font-size: 4.7vw

    &__instructions
      display: block
      font-size: 14px
      font-size: 4vw