.recipe-page
  padding: 0 0 1rem 0
  background-color: #fff
  color: graypurple

  h3
    text-align: center
    margin: 0 0 0.3em
  
  h4
    text-align: center
    margin: 0
    font-weight: 500

  .back-button
    position: absolute
    left: 1rem
    top: 0.5rem
    font-size: 22px
    font-size: 7vw
    cursor: pointer
    color: #fff

  .instructions
    font-size: 15px
    font-size: 4.7vw

  .ingredient
    display: block
    padding: 0.5rem 0.4rem
    border-bottom: solid 1px lighten(graypurple, 80%)
    font-size: 5vw

  &__steps
    padding: 1rem 0

.step
  padding: 0.8rem 0.4rem
  // border-bottom: solid 1px lighten(graypurple, 80%)
  
  &__ingredients
    display: block
    margin-bottom: 0.3em
    font-weight: 600
    font-size: 15px
    font-size: 4.7vw

  &__instructions
    display: block
    font-size: 14px
    font-size: 4vw