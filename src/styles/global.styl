html
  box-sizing: border-box

*, *::before, *::after
  box-sizing: inherit

html,
body
  padding: 0;

body
  margin: 0
  font-family: 'Quicksand', sans-serif

h1,
h2,
h3,
h4,
h5
  font-weight: 500
  margin: 0.2em 0 0.8em

p
  margin: 0.2em 0 0.5em

button,
.button
  margin: 0.5rem 0 1rem
  padding: 0.65em 1.5em
  background-color: darkorange
  background-image: primary-gradient
  color: #fff
  text-shadow: 1px 1px 3px darkerorange
  box-shadow: inset 0 -2px 3px darkorange
  border: none
  font-weight: 500
  font-size: 16px
  font-size: 5vw
  border-radius: 6px
  line-height: 1
  cursor: pointer
  transition: background 0.3s

.app-wrapper
  position: relative
  overflow-x: hidden
  min-height: 100vh

.content-wrapper
  width: 90%
  margin: 0 auto
