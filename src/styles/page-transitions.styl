.recipe-page,
.category
  position: absolute
  left: 0
  top: 0
  width: 100%
  min-height: 100%


.recipe-enter
  transition: translate 0.5s cubic-bezier(0.860, 0.000, 0.070, 1.000)
  transform: translateX(100%)

.recipe-enter-active
  transform: translateX(0)

.recipe-leave
  transition: translate 0.2s cubic-bezier(0.860, 0.000, 0.070, 1.000)
  transform: translateX(0)

.recipe-leave-active
  transform: translateX(100%)


.category-enter
  transition: opacity 1s
  transition-delay: 0.2s
  opacity: 0

.category-enter-active
  opacity: 1

.category-leave
  transition: opacity 0.2s
  opacity: 1

.category-leave-active
  opacity: 0