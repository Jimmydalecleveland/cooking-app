.nav
  background-color: #FBDA61
  background-image: primary-gradient
  box-shadow: inset 0 -1px 3px darkorange

  padding: 0.8rem 0 0
  color: #fff
  text-align: center
  margin-bottom: 1rem
  
  .logo
    font-size: 18px
    font-size: 5.5vw
    font-weight: 500
    text-shadow: 1px 1px 3px darkerorange

  .back-button
    position: absolute
    left: 1rem
    top: 0.5rem
    font-size: 22px
    font-size: 7vw
    cursor: pointer
    color: #fff

  &__sub
    display: flex
    justify-content: center
    padding: 1.5rem 0 0

    button
      flex: 1
      position: relative
      padding-bottom: 1rem
      background: transparent
      outline: none
      color: #ffeaca
      text-shadow: 1px 1px 3px darkerorange
      font-size: 16px
      font-size: 5vw
      transition: color 0.2s

      &::before
        visibility: hidden
        bottom: 0;
        left: 50%;
        border: solid transparent;
        content: " ";
        height: 0;
        width: 0;
        position: absolute;
        pointer-events: none;
        border-color: rgba(255, 255, 255, 0);
        border-bottom-color: #fff;
        border-width: 10px;
        margin-left: -10px;
        transition: all 0.4s cubic-bezier(1,.02,.42,.32)
        transform: translateY(10px)

      &.active
        color: #fff

        &::before
          visibility: visible
          transform: translateY(0)